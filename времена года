import java.util.Scanner;

public class VremenaGoda {
    public VremenaGoda() {
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("укажите номер месяца ");
        int month = scanner.nextInt();
        String res = " ";
        String com = "";
        switch (month) {
            case 1:
            case 2:
            case 12:
                res = "зима холодно";
                com = "какао или вкусный чай!";
                break;
            case 3:
            case 4:
            case 5:
                res = "весна теплее";
                com = "пуховик в сторону!";
                break;
            case 6:
            case 7:
            case 8:
                res = "Лето жара)))";
                com = "шорты +30!! ";
                break;
            case 9:
            case 10:
            case 11:
                res = "Осень прохлада";
                com = "шерты рано а вот джинсы отлично!";
                break;
            default:
                res = "нет такого месяца в году!";
        }

        System.out.println(res);
        System.out.println(com);
    }
}
